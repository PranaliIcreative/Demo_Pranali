<odoo>

  <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
<!--            <field name="groups_id" eval="[(4, ref('sale.group_auto_done_setting'))]"/>-->
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_id"/>
                 </xpath>
            </field>
  </record>

  <record id="sale_order_form_quoteinherit" model="ir.ui.view">
            <field name="name">sale.order.inherited_1</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
<!--            <field name="groups_id" eval="[(4, ref('sale.group_auto_done_setting'))]"/>-->
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='sale_order_template_id']" position="before">
                    <field name="customer_ref"/>
                 </xpath>
            </field>

  </record>


</odoo>