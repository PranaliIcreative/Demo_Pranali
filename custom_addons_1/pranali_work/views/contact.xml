<odoo>

  <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
<!--            <field name="groups_id" eval="[(4, ref('sale.group_auto_done_setting'))]"/>-->
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='vat']" position="before">
                    <field name="date_of_birth"/>
                </xpath>

                <xpath expr="//div[hasclass('o_address_format')]/field[@name='street2']" position="after">
                    <field name="street3" placeholder="street 3"/>
                </xpath>
                <field name="vat" position="replace">
                    <field name="customer_reference" optional="show" attrs="{'invisible': [('company_type', '=', 'company')]}"/>
<!--                <field name="date_of_birth" optional="show"/>-->
                </field>

            </field>

  </record>


   <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.tree.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="customer_reference" optional="hide"/>
                    <field name="date_of_birth" optional="show"/>
                </field>
            </field>
   </record>

</odoo>